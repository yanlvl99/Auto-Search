# Configurações do servidor
FLASK_APP=app.py
FLASK_ENV=development
HOST=0.0.0.0
PORT=5000
DEBUG=true

# Configurações do aplicativo
APP_NAME=Auto Search
APP_VERSION=1.0.0
APP_AUTHOR=yanlvl99
APP_LICENSE=MIT
APP_DESCRIPTION=Automatização de pesquisas no Microsoft Edge

# Configurações de log
LOG_LEVEL=info
LOG_FILE=auto_search.log
LOG_FORMAT=%(asctime)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S
LOG_MAX_SIZE=5242880
LOG_BACKUP_COUNT=5
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# Configurações de backup
BACKUP_DIR=backups
MAX_BACKUPS=7
BACKUP_INTERVAL=86400
COMPRESS_BACKUPS=true
AUTO_BACKUP=true

# Configurações de cache
CACHE_DIR=cache
CACHE_TTL=300
MAX_CACHE_SIZE=104857600
CLEAR_CACHE_ON_START=true

# Configurações de segurança
ENCRYPT_DATA=true
SECURE_STORAGE=true
ENCRYPTION_KEY=sua-chave-de-criptografia-aqui
TELEMETRY=false
ANONYMOUS_STATISTICS=true

# Configurações de pesquisa
DEFAULT_SEARCH_COUNT=30
DEFAULT_DEVICE_TYPE=desktop
DEFAULT_SEARCH_TYPE=random
DEFAULT_MIN_DELAY=3
DEFAULT_MAX_DELAY=10
DEFAULT_CLOSE_AFTER_COMPLETE=true
DEFAULT_CLICK_RESULTS=false
DEFAULT_RANDOMIZE_DELAY=true

# Configurações de interface
DEFAULT_THEME=light
DEFAULT_FONT_SIZE=medium
DEFAULT_NOTIFICATIONS=true
DEFAULT_NOTIFICATION_POSITION=bottom-right
DEFAULT_NOTIFICATION_SOUND=true
DEFAULT_NOTIFICATION_DURATION=5000
DEFAULT_CARD_ANIMATIONS=true
DEFAULT_SHOW_TOOLTIPS=true
DEFAULT_EXPAND_STATUS_ON_START=false
DEFAULT_AUTO_SCROLL_RESULTS=true

# Configurações de desempenho
PARALLEL_SEARCHES=false
MAX_CONCURRENT_SEARCHES=2
BROWSER_MEMORY_LIMIT=2048
CLEAR_BROWSER_DATA=true
OPTIMIZATION_LEVEL=balanced

# Configurações de perfil
AUTO_DETECT_PROFILES=true
PROFILE_REFRESH_INTERVAL=300
SAVE_PROFILE_STATS=true
PROFILE_BACKUP=true
PROFILE_BACKUP_INTERVAL=86400
MAX_PROFILES=50

# Configurações de preset
MAX_PRESETS=20
PRESET_BACKUP=true
PRESET_BACKUP_INTERVAL=86400

# Configurações de exportação
DEFAULT_EXPORT_FORMAT=json
EXPORT_DIR=results
MAX_RESULTS=1000

# Configurações do navegador
BROWSER_HEADLESS=true
BROWSER_DISABLE_IMAGES=false
BROWSER_DISABLE_JAVASCRIPT=false
BROWSER_DISABLE_GPU=true
BROWSER_INCOGNITO=false
BROWSER_PAGE_LOAD_TIMEOUT=30
BROWSER_SCRIPT_TIMEOUT=30
BROWSER_IMPLICIT_WAIT=10

# Configurações de desenvolvimento
DEVELOPER_MODE=false
DEBUG_LOGGING=false
PROFILE_CODE=false
MEASURE_PERFORMANCE=false
SHOW_DEBUG_INFO=false 